<section id="twitter">
  <% if $redis.get[:twitter_toggle] == "true" %>
  <h1>Tweets</h1>
  <ul>
    <li>  <%= $redis[:tweets][0] %> </li>
    <li>  <%= $redis[:tweets][1] %> </li>
    <li>  <%= $redis[:tweets][2] %> </li>
    <li>  <%= $redis[:tweets][3] %> </li>
    <li>  <%= $redis[:tweets][4] %> </li>
    <li>  <%= $redis[:tweets][5] %> </li>
    <li>  <%= $redis[:tweets][6] %> </li>
    <li>  <%= $redis[:tweets][7] %> </li>
    <li>  <%= $redis[:tweets][8] %> </li>
    <li>  <%= $redis[:tweets][9] %> </li>
  </ul>
  <a href='/feeds/twitter'>Twitter</a>
  <% end %>

</section>

<section id="times">
  <% if $redis.get[:times_toggle] == "true" %>
    <h1>Relevant News Articles</h1>
    <p>
      <a href="<%= $redis.get[:times_article_url] %>" ><%= $redis.get[:times_headline] %></a>
      </br>
      <%= $redis.get[:times_snippet] %>
      <a href='feeds/times'>The Times</a>
    </p>
  <% end %>
</section>

<section id="trending">
  <% if $redis.get[:graph_toggle] == "true" %>
  <h1> <%= $redis.get[:obsession] %> Trending </h1>
    <!-- displays ob$redis graph -->
    <script type="text/javascript" src="//www.google.com/trends/embed.js?hl=en-US&q=<%= $redis.get[:obsession] %>&cmpt=q&content=1&cid=TIMESERIES_GRAPH_0&export=5&w=500&h=330"></script>
    </br>
    <a href='/feeds/graph'>Google Trending</a>
  <% end %>
</section>

<section id="weather">
  <% if $redis.get[:weather_toggle] == "true" %>
    <p>Current temperature in <%= $redis.get[:location] %> is: <%= $redis.get[:temp_f] %> </p>
  <% end %>
</section>
