<h1> Your obsession is <%= $redis.get(:obsession) %>


<h1>Which feeds would you like to see?</h1>
<% feeds_hash = JSON.parse($redis.get('feeds_hash')) %>

<section id="feed_form">
  <form method="post" action="/feeds">
    <label for="twitter_toggle">Twitter</label>
    <% if feeds_hash.include?("twitter_toggle") %>
      <input type="checkbox" name="twitter_toggle" id="twitter_toggle" value=true checked />
    <% else %>
      <input type="checkbox" name="twitter_toggle" id="twitter_toggle" value=true />
    <% end %>
    </br></br>

      <label for="times_toggle">New York Times</label>
    <% if feeds_hash.include?("times_toggle") %>
      <input type="checkbox" name="times_toggle" id="times_toggle" value=true checked/>
     <% else %>
      <input type="checkbox" name="times_toggle" id="times_toggle" value=true />
    <% end %>
    </br></br>

      <label for="graph_toggle">Google Trending</label>
    <% if feeds_hash.include?("graph_toggle") %>
      <input type="checkbox" name="graph_toggle" id="graph_toggle" value=true checked/>
    <% else %>
      <input type="checkbox" name="graph_toggle" id="graph_toggle" value=true />
    <% end %>
    </br></br>

    <label for="weather_toggle">Weather</label>
      <% if feeds_hash.include?("weather_toggle") %>
    <input type="checkbox" name="weather_toggle" id="weather_toggle" value=true checked/>
      <% else %>
    <input type="checkbox" name="weather_toggle" id="weather_toggle" value=true />
      <% end %>
    </br></br>

    <label for="city">City</label>
    <input type="text" name="city" id="city" />
    <label for="state">State</label>
    <input type="text" name="state" id="state" />
    <input type="submit" />
  </form>
</section>
