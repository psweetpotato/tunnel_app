

<% if @obscure %>
<h1>Congratulations! You are too cool for school! (Your obsession is too obscure. Try again.) </h1>
<% elsif @logged_out %>
<h1> Log Out Successful! </h1>
<% elsif $redis.exists("obsession") %>
<h1> Hello <%= $redis.get(:username) %>, your obsession is <%= $redis.get(:obsession) %> </h1>
<% else %>
<h1> Hello! </h1>
<% end %>

<section id="form">
  <form method="post" action="/feeds">
    <% if $redis.exists("obsession") %>

    <% else %>
    <label for="username">Username</label>
    <input type="text" name="username" id="username" />
  </br>
    <label for="obsession">Pick your obsession.</label>
    <input type="text" name="obsession" id="obsession" />
  <% end %>
    <h1>Which feeds would you like to see?</h1>
    <label for="twitter_toggle">Twitter</label>
      <input type="checkbox" name="twitter_toggle" id="twitter_toggle" value=true checked />
    </br></br>

      <label for="times_toggle">New York Times</label>
      <input type="checkbox" name="times_toggle" id="times_toggle" value=true checked/>
    </br></br>

      <label for="graph_toggle">Google Trending</label>
      <input type="checkbox" name="graph_toggle" id="graph_toggle" value=true checked/>
    </br></br>

    <label for="weather_toggle">Weather</label>
    <input type="checkbox" name="weather_toggle" id="weather_toggle" value=true />
    </br></br>

    <label for="city">City</label>
    <input type="text" name="city" id="city" />
    <label for="state">State</label>
    <input type="text" name="state" id="state" />
    <input type="submit" />
  </form>
</section>
